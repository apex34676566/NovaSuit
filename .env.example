# NovaSuite-AI Authentication System Configuration

# Security Keys (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too

# Database Configuration
DATABASE_URL=sqlite:///novasuite.db
# For PostgreSQL: postgresql://username:password@localhost/novasuite_db
# For MySQL: mysql://username:password@localhost/novasuite_db

# Email Configuration (for 2FA codes)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@novasuite.ai
SMTP_PASSWORD=your-smtp-password

# Redis Configuration (optional, for production)
REDIS_URL=redis://localhost:6379/0

# API Rate Limiting
RATE_LIMIT_STORAGE_URL=memory://

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIRECTORY=./logs

# GDPR Compliance
DATA_CONTROLLER_NAME=NovaSuite-AI
DATA_CONTROLLER_ADDRESS=Spain
DATA_CONTROLLER_EMAIL=privacy@novasuite.ai
DPO_EMAIL=dpo@novasuite.ai

# API Key Encryption (auto-generated if not provided)
API_KEY_ENCRYPTION_KEY=

# Security Settings
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30
API_KEY_DEFAULT_EXPIRY_DAYS=30
AUDIT_LOG_RETENTION_DAYS=2555
SESSION_TIMEOUT_HOURS=24

# Development Settings
FLASK_ENV=development
FLASK_DEBUG=True