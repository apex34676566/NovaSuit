# AI Expense Analyzer Configuration

# OpenAI API Key for AI analysis
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/ai_expense_analyzer

# Firefly III Integration
FIREFLY_III_URL=http://localhost:8080
FIREFLY_III_TOKEN=your_firefly_iii_token_here

# Redis for caching and websockets
REDIS_URL=redis://localhost:6379

# Application Settings
SECRET_KEY=your_secret_key_here
DEBUG=True
LOG_LEVEL=INFO

# AI Model Settings
AI_MODEL=gpt-3.5-turbo
MAX_TOKENS=1000
TEMPERATURE=0.7

# Analysis Settings
ANALYSIS_SCHEDULE_HOURS=24
RISK_THRESHOLD=0.8
SAVINGS_TARGET_PERCENTAGE=20